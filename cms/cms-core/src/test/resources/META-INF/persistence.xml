<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="cms" transaction-type="JTA">
           <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <class>org.javatraining.entity.CourseEntity</class>
        <class>org.javatraining.entity.PersonEntity</class>
        <class>org.javatraining.entity.MarkEntity</class>
        <class>org.javatraining.entity.LessonEntity</class>
        <class>org.javatraining.entity.NewsEntity</class>
        <class>org.javatraining.entity.PracticeLessonEntity</class>
        <class>org.javatraining.entity.ForumMessagesEntity</class>
        <class>org.javatraining.entity.LessonLinkEntity</class>

        <properties>
            <property name="hibernate.dialect" value="${hibernate.dialect}"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="wildfly.jpa.twophasebootstrap" value="false"/>
        </properties>
    </persistence-unit>
</persistence>